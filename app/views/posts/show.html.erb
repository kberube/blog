<div id="post_content">
		<h2 class="title">
			<%= @post.title %>
		</h2>

	<p class="date">
		Submitted <%= time_ago_in_words(@post.created_at) %> ago.
		<% if user_signed_in? %>
		| <%= link_to 'Edit', edit_post_path(@post) %>
		| <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure? This is permanent.' } %>
		<% end %>
	</p>

	<p class="body">
		<%= @post.body.html_safe %>
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>
		<h3>Add a comment:</h3>

		<%= render "comments/form" %>
	</div>
</div>